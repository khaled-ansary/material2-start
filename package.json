{
  "name": "angular4-material2",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "npm run build-themes && ng serve --port 4256",
    "restart": "rm -rf node_modules/angular2gridster/ && npm install && npm start",
    "serve": "npm run build:aot && npm run angular-http-server",
    "serve:aot": "npm run build-themes && ng serve --prod --aot --build-optimizer",
    "build": "ng build",
    "build:aot": "ng build --prod --aot --build-optimizer",
    "lint": "ng lint",
    "workshop": "ts-node ./workshop-cli",
    "build-themes": "bash ./tools/build-themes.sh",
    "bundle-report": "ng build --prod --build-optimizer --aot --stats-json && webpack-bundle-analyzer dist/stats.json",
    "angular-http-server": "angular-http-server --path ./dist"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "5.1.2",
    "@angular/cdk": "5.0.2",
    "@angular/common": "5.1.2",
    "@angular/compiler": "5.1.2",
    "@angular/core": "5.1.2",
    "@angular/flex-layout": "2.0.0-beta.12",
    "@angular/forms": "5.1.2",
    "@angular/http": "5.1.2",
    "@angular/material": "5.0.2",
    "@angular/platform-browser": "5.1.2",
    "@angular/platform-browser-dynamic": "5.1.2",
    "@angular/platform-server": "5.1.2",
    "@angular/router": "5.1.2",
    "@angular/service-worker": "5.1.2",
    "angular2gridster": "1.2.0",
    "core-js": "^2.5.1",
    "hammerjs": "^2.0.8",
    "rxjs": "^5.5.6",
    "zone.js": "^0.8.18"
  },
  "devDependencies": {
    "@angular/cli": "^1.6.2",
    "@angular/compiler-cli": "5.1.2",
    "@types/jasmine": "2.5.46",
    "@types/node": "~7.0.12",
    "angular-http-server": "^1.4.2",
    "codelyzer": "~4.0.1",
    "node-sass": "^4.6.0",
    "simple-git": "^1.69.0",
    "simple-terminal-menu": "^1.1.3",
    "ts-node": "~3.0.4",
    "tslint": "^5.3.2",
    "typescript": "^2.4.2",
    "webpack-bundle-analyzer": "^2.9.0"
  }
}
